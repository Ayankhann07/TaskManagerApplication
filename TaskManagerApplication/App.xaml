<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaskManagerApplication"
             xmlns:converters="clr-namespace:TaskManagerApplication.Converters"
             x:Class="TaskManagerApplication.App">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:BoolToArrowIconConverter x:Key="BoolToArrowIconConverter" />

        </ResourceDictionary>
    </Application.Resources>

</Application>
